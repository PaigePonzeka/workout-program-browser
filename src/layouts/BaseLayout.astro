---
import "../styles/global.css";
import { getUrl } from "@/utils/url";

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: { label: string; href?: string }[];
  ogType?: "website" | "article";
  ogImage?: string;
  schema?: Record<string, unknown> | Record<string, unknown>[];
}

const {
  title,
  description = "AI-powered workout programming delivered monthly",
  breadcrumbs,
  ogType = "website",
  ogImage,
  schema,
} = Astro.props;

const currentYear = new Date().getFullYear();
const siteName = "FORGED";

// Full canonical URL for the current page
const canonicalUrl = Astro.url.href;

// Site base URL (e.g. https://paigeponzeka.github.io/workout-program-browser)
const siteBase = Astro.site
  ? new URL(import.meta.env.BASE_URL || "/", Astro.site).href.replace(/\/$/, "")
  : "";

// Full page title — homepage gets a descriptive standalone title
const fullTitle =
  title === "Home"
    ? `${siteName} — Free AI-Powered Monthly Workout Programs`
    : `${title} | ${siteName}`;

// OG image — use provided image or fall back to hero (replace with 1200×630 asset when ready)
const ogImageUrl = ogImage ?? `${siteBase}/hero_image.jpg`;

// Auto-generate BreadcrumbList schema from the breadcrumbs prop
const breadcrumbSchema =
  breadcrumbs && breadcrumbs.length > 0
    ? {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: [
          { "@type": "ListItem", position: 1, name: "Home", item: `${siteBase}/` },
          ...breadcrumbs
            .filter((c) => c.label !== "Home")
            .map((crumb, i) => ({
              "@type": "ListItem",
              position: i + 2,
              name: crumb.label,
              ...(crumb.href ? { item: `${siteBase}${crumb.href}` } : {}),
            })),
        ],
      }
    : null;

// Merge page-level schema(s) with breadcrumb schema
const allSchemas: Record<string, unknown>[] = [
  ...(schema ? (Array.isArray(schema) ? schema : [schema]) : []),
  ...(breadcrumbSchema ? [breadcrumbSchema] : []),
];
---

<!DOCTYPE html>
<html lang="en" data-theme="gym">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="oklch(0.65 0.2 25)" />

    <!-- Google Fonts — preconnect first, then stylesheet to avoid render-blocking @import -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,300..700;1,9..40,300..700&family=Outfit:wght@300;400;500;600;700;800&display=swap" />

    <!-- Primary SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${siteName} — Workout Programs`} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter / X Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={`${siteName} — Workout Programs`} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <link rel="shortcut icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4CY9HFZ9Z7"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-4CY9HFZ9Z7');
    </script>

    <!-- JSON-LD Structured Data -->
    {allSchemas.map((s) => (
      <script type="application/ld+json" set:html={JSON.stringify(s)} />
    ))}
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 text-base-content">

    <!-- ─── Sticky Navigation ─── -->
    <nav class="navbar bg-base-200/80 backdrop-blur-lg sticky top-0 z-50 border-b border-base-300 px-4 lg:px-8">
      <div class="navbar-start">
        <a href={`${import.meta.env.BASE_URL || '/'}`} class="flex items-center gap-2 group">
          <div class="w-9 h-9 rounded-lg bg-primary flex items-center justify-center text-primary-content font-bold text-lg transition-transform group-hover:scale-105">
            F
          </div>
          <span class="font-bold text-xl tracking-tight hidden sm:inline" style="font-family: 'Outfit', sans-serif;">
            FORGED
          </span>
        </a>
      </div>
      <div class="navbar-center hidden md:flex">
        <ul class="menu menu-horizontal px-1 gap-1 text-sm font-medium">
          <li><a href={`${import.meta.env.BASE_URL || '/'}`} class="rounded-lg">Home</a></li>
        </ul>
      </div>
      <div class="navbar-end gap-2">
        <!-- Theme toggle -->
        <label class="swap swap-rotate btn btn-ghost btn-circle btn-sm">
          <input type="checkbox" id="theme-toggle" />
          <svg class="swap-off fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
          <svg class="swap-on fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/></svg>
        </label>
        <!-- Mobile menu -->
        <div class="dropdown dropdown-end md:hidden">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-200 rounded-box z-[1] mt-3 w-52 p-2 shadow-lg">
            <li><a href="/">Home</a></li>
            <li><a href="/#programs">Programs</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- ─── Breadcrumbs ─── -->
    {breadcrumbs && breadcrumbs.length > 0 && (
      <div class="bg-base-200/50 border-b border-base-300">
        <div class="max-w-5xl mx-auto px-4 lg:px-8 py-2">
          <div class="breadcrumbs text-sm">
            <ul>
              {breadcrumbs.map((crumb) => (
                <li>
                  {crumb.href ? (
                    <a href={getUrl(crumb.href)} class="text-base-content/60 hover:text-primary transition-colors">{crumb.label}</a>
                  ) : (
                    <span class="text-base-content/80 font-medium">{crumb.label}</span>
                  )}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    )}

    <!-- ─── Main Content ─── -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- ─── Footer ─── -->
    <footer class="bg-base-200 border-t border-base-300 mt-auto">
      <div class="max-w-5xl mx-auto px-4 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-2">
            <div class="w-7 h-7 rounded-md bg-primary flex items-center justify-center text-primary-content font-bold text-sm">F</div>
            <span class="font-semibold tracking-tight" style="font-family: 'Outfit', sans-serif;">FORGED</span>
          </div>
          <p class="text-sm text-base-content/50">
            &copy; {currentYear} FORGED. AI-powered workout programming.
          </p>
        </div>
      </div>
    </footer>

    <!-- Theme toggle script -->
    <script is:inline>
      const toggle = document.getElementById('theme-toggle');
      const html = document.documentElement;
      const stored = localStorage.getItem('theme');
      if (stored === 'gymdark') {
        html.setAttribute('data-theme', 'gymdark');
        toggle.checked = true;
      }
      toggle?.addEventListener('change', () => {
        const theme = toggle.checked ? 'gymdark' : 'gym';
        html.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
      });
    </script>
  </body>
</html>
