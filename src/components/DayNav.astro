---
interface DayLink {
  dayNumber: number;
  title: string;
  href: string;
}

interface Props {
  prev?: DayLink;
  next?: DayLink;
  monthHref: string;
  monthTitle: string;
}

const { prev, next, monthHref, monthTitle } = Astro.props;
---

<nav class="flex flex-col sm:flex-row items-stretch gap-3 mt-10 pt-6 border-t border-base-300">
  {/* Previous */}
  {prev ? (
    <a href={prev.href} class="flex-1 group">
      <div class="card bg-base-200 border border-base-300 hover:border-primary/30 transition-all p-4">
        <div class="flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/30 group-hover:text-primary transition-colors shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
          <div>
            <span class="text-xs text-base-content/40 uppercase tracking-wide">Previous</span>
            <p class="font-semibold text-sm group-hover:text-primary transition-colors" style="font-family: 'Outfit', sans-serif;">Day {prev.dayNumber}: {prev.title}</p>
          </div>
        </div>
      </div>
    </a>
  ) : (
    <a href={monthHref} class="flex-1 group">
      <div class="card bg-base-200 border border-base-300 hover:border-primary/30 transition-all p-4">
        <div class="flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/30 group-hover:text-primary transition-colors shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" /></svg>
          <div>
            <span class="text-xs text-base-content/40 uppercase tracking-wide">Back to</span>
            <p class="font-semibold text-sm group-hover:text-primary transition-colors" style="font-family: 'Outfit', sans-serif;">{monthTitle}</p>
          </div>
        </div>
      </div>
    </a>
  )}

  {/* Next */}
  {next ? (
    <a href={next.href} class="flex-1 group">
      <div class="card bg-base-200 border border-base-300 hover:border-primary/30 transition-all p-4">
        <div class="flex items-center justify-end gap-3 text-right">
          <div>
            <span class="text-xs text-base-content/40 uppercase tracking-wide">Next</span>
            <p class="font-semibold text-sm group-hover:text-primary transition-colors" style="font-family: 'Outfit', sans-serif;">Day {next.dayNumber}: {next.title}</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/30 group-hover:text-primary transition-colors shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
        </div>
      </div>
    </a>
  ) : (
    <a href={monthHref} class="flex-1 group">
      <div class="card bg-base-200 border border-base-300 hover:border-primary/30 transition-all p-4">
        <div class="flex items-center justify-end gap-3 text-right">
          <div>
            <span class="text-xs text-base-content/40 uppercase tracking-wide">Complete</span>
            <p class="font-semibold text-sm group-hover:text-primary transition-colors" style="font-family: 'Outfit', sans-serif;">Back to {monthTitle}</p>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/30 group-hover:text-primary transition-colors shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
        </div>
      </div>
    </a>
  )}
</nav>
