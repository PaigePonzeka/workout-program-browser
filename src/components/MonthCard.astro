---
interface Props {
  title: string;
  monthSlug: string;
  phase: string;
  goal: string;
  split: string;
  totalDays: number;
  startDate: string;
  featured?: boolean;
}

const { title, monthSlug, phase, goal, split, totalDays, startDate, featured } = Astro.props;

const phaseColors: Record<string, string> = {
  "Hypertrophy": "badge-primary",
  "Strength": "badge-secondary",
  "Endurance": "badge-accent",
  "Power": "badge-warning",
  "Recovery": "badge-info",
};

const badgeClass = phaseColors[phase] || "badge-neutral";
---

<a href={`${import.meta.env.BASE_URL.replace(/\/+$/, '')}/workouts/${monthSlug}`} class="group block">
  <div class={`card bg-base-200 border border-base-300 hover:border-primary/40 transition-all duration-300 hover:shadow-lg hover:shadow-primary/5 ${featured ? 'ring-2 ring-primary/20' : ''}`}>
    <div class="card-body p-5 sm:p-6">
      {/* Header */}
      <div class="flex items-start justify-between gap-3">
      <div class="flex-1 min-w-0">
          <h3 class="card-title text-lg sm:text-xl font-bold group-hover:text-primary transition-colors leading-tight" style="font-family: 'Outfit', sans-serif;">
            {title}
          </h3>
        </div>
        <div class="flex flex-col items-end gap-1.5 shrink-0">
          {featured && (
            <span class="badge badge-primary badge-sm gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
              Latest
            </span>
          )}
          <span class={`badge ${badgeClass} badge-sm badge-outline`}>{phase}</span>
        </div>
      </div>

      {/* Goal */}
      <p class="text-sm text-base-content/60 mt-1 line-clamp-2">{goal}</p>

      {/* Arrow */}
      <div class="flex justify-end mt-2">
        <span class="text-primary/0 group-hover:text-primary transition-all duration-300 translate-x-0 group-hover:translate-x-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </span>
      </div>
    </div>
  </div>
</a>
